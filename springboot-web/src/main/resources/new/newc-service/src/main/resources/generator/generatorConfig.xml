<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator/generatorConfig.properties"/>

    <context id="mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
                    <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
                    <property name="caseSensitive" value="true"/>
        </plugin>

        <jdbcConnection driverClass="${jdbc.driver-class-name}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="${mapper.targetModelPackage}" targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="${mapper.targetXMLPackage}"  targetProject="src/main/resources"/>
        <javaClientGenerator targetPackage="${mapper.targetMapperPackage}" targetProject="src/main/java" type="XMLMAPPER" />


        <!-- 这里是数据库的表名table_user 以及 POJO类的名字User -->
        <table tableName="orbit_control_task">
             <!--<generatedKey column="id" sqlStatement="JDBC"/>-->
             <!--<generatedKey column="id" sqlStatement="Mysql" identity="true"/>-->
        </table>

        <!--         <table tableName="gis_address_type_dict" domainObjectName="GisAddressType"
                    enableCountByExample="false" enableSelectByExample="false"
                    enableUpdateByExample="false" enableDeleteByExample="false">
                    </table> -->


    </context>
</generatorConfiguration>